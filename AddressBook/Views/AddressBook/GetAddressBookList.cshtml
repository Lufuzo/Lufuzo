@model IEnumerable<AddressBook.Models.AddressBookViewModel>

@{
    ViewBag.Title = "Address Book List";
}
<div style="font-family: Arial">
    <h2>GetAddressBookList</h2>

    <p>
        @Html.ActionLink("Create New", "CreateAddressBookContact")
    </p>
    @using (Html.BeginForm("searchByName", "AddressBook", FormMethod.Get))
    {
        <p>
            <b>Search By:</b> @Html.RadioButton("SearchBy", "Name") <b><text>Name Only</text> </b>

            <b>@Html.TextBox("search")<input type="submit" value="Search"></b>

        </p>
    }
    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Elias)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessPhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Elias)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.AddressBookId }) |
                        @Html.ActionLink("Details", "Details", new { id=item.AddressBookId }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.AddressBookId })
                    </td>*@
            </tr>
        }

    </table>
</div>
